<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="700, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="15, 15">
      
      <LabelWidget Name="Prism_Dialog.Title" Font="{Fonts/Pericles32}" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <CanvasWidget Size="Infinity, 60">
	  
        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <CanvasWidget Size="180, -1" VerticalAlignment="Center">
            <LabelWidget Name="Prism_Dialog.Label1" Text="Radius" Font="{Fonts/Pericles18}" HorizontalAlignment="Center"/>
          </CanvasWidget>
          <SliderWidget Name="Prism_Dialog.Slider1" VerticalAlignment="Center" LabelWidth="120" />
        </StackPanelWidget>
      </CanvasWidget>
	  
	  <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="Prism_Dialog.Button3" Style="{Styles/ButtonStyle_Minus}" VerticalAlignment="Center"/>
        <CanvasWidget Size="230, 40" VerticalAlignment="Center">
		 <LabelWidget Name="" Text="" Font="{Fonts/Pericles24}" HorizontalAlignment="Center" VerticalAlignment="Center"/>        
        </CanvasWidget>
        <BevelledButtonWidget Name="Prism_Dialog.Button4" Style="{Styles/ButtonStyle_Plus}" VerticalAlignment="Center"/>
      </StackPanelWidget>
	  
	  
	
	  
	 <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 1">
                    <LabelWidget Text="Mode :" Font="{Fonts/Pericles32}" Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
                    <StackPanelWidget Direction="Horizontal" Margin="20, 0">
                      <LabelWidget Name="Prism_Dialog.Mode" Text="Holow" Font="{Fonts/Pericles18}" VerticalAlignment="Center" />
                      <CanvasWidget Size="20, 0" />
                      <BevelledButtonWidget Name="Prism_Dialog.Select_mode" Style="{Styles/ButtonStyle_70x60}" Text="..." VerticalAlignment="Center" />
                    </StackPanelWidget>
                  </UniformSpacingPanelWidget>
				  	   
	   <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 1">
                    <LabelWidget Text="Block :" Font="{Fonts/Pericles32}" Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
                    <StackPanelWidget Direction="Horizontal" Margin="20, 0">
                      <BlockIconWidget Name="Prism_Dialog.Icon" Size="54, 54" VerticalAlignment="Center" HorizontalAlignment="Center" Contents="1" />
                      <CanvasWidget Size="10, 0" />
                
                      <CanvasWidget Size="20, 0" />
                      <BevelledButtonWidget Name="Prism_Dialog.Icon_select" Style="{Styles/ButtonStyle_70x60}" Text="..." VerticalAlignment="Center" />
                    </StackPanelWidget>
                  </UniformSpacingPanelWidget>

     
	  
	  
	 
	  

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="Prism_Dialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="Build" Margin="20, 0" />
        <BevelledButtonWidget Name="Prism_Dialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="Cancel"/>
      </StackPanelWidget>

    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
